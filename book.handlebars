<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{book-title}}</title>
    <link rel="stylesheet" href="base.css">
    <link rel="stylesheet" href="front-matter/front-matter.css">
    <link rel="stylesheet" href="body/body.css">
    <link rel="stylesheet" href="back-matter/back-matter.css">
    <script src="assets/js/smartquotes.js"></script>
    <script src="assets/js/paged.js"></script>
</head>
<body>
    <!-- Title Page -->
    {{#if titlePage}}
    <section class="title-page">
        {{{titlePage}}}
    </section>
    {{else}}
    <!-- Fallback title page if book-title-page.md is missing -->
    <section class="title-page">
        <h1 class="book-title-text">{{book-title}}</h1>
        <h2>{{description}}</h2>
        {{#each authors}}
        <p>{{givenNames}} {{surname}}</p>
        {{/each}}
        <p>{{publication-date}}</p>
    </section>
    {{/if}}

    <!-- Front Matter -->
    <section class="front-matter">
        {{#each front}}
            <section class="front-matter-content">
                {{{this}}}
            </section>
        {{/each}}
    </section>

    <!-- Body (Main Chapters) -->
    <section class="body">
        {{#if body.[0].arcName}}
            {{!-- Arc-based structure --}}
            {{#each body}}
            <section class="arc" data-arc="{{arcName}}">
                {{#if arcTitle}}
                <section class="arc-title">
                    <h1 class="arc-title-text">{{arcTitle}}</h1>
                </section>
                {{/if}}
                {{#each chapters}}
                <section class="body-content">
                    {{{this}}}
                </section>
                {{/each}}
            </section>
            {{/each}}
        {{else}}
            {{!-- Simple flat structure --}}
            {{#each body}}
            <section class="body-content">
                {{{this}}}
            </section>
            {{/each}}
        {{/if}}
    </section>

    <!-- Back Matter -->
    {{#if back}}
    <section class="back-matter">
        {{#each back}}
            <section class="back-matter-content">
                {{{this}}}
            </section>
        {{/each}}
    </section>
    {{/if}}

    <!-- Headings Registry for TOC (if needed) -->
    <script>
        window.headingsRegistry = {{{json headings}}};
        
        // Initialize smartquotes and then start PagedJS
        document.addEventListener('DOMContentLoaded', function() {
            // First, apply smartquotes to the content
            if (typeof smartquotes !== 'undefined') {
                console.log('Applying smartquotes...');
                smartquotes();
            }
            
            // Then start PagedJS pagination
            console.log('Available Paged objects:', window.Paged ? Object.keys(window.Paged) : 'Paged not found');
            
            if (window.Paged && window.Paged.Previewer) {
                console.log('Starting PagedJS with Previewer...');
                let previewer = new window.Paged.Previewer();
                previewer.preview();
            } else if (window.Paged) {
                console.log('Paged object found but no Previewer. Available properties:', Object.keys(window.Paged));
            } else {
                console.warn('PagedJS not loaded. Available global objects:', Object.keys(window).filter(k => k.toLowerCase().includes('paged')));
            }
        });
    </script>
</body>
</html>